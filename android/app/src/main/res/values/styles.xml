<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="android:Theme.NoTitleBar" tools:ignore="NewApi">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@string/catchcatch_font</item>
    </style>

    <style name="PopUpDialog">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="ScreenTitle">
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="SessionSeparator">
    </style>

    <string name="catchcatch_font">sans-serif-condensed</string>
</resources>
