<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.perenecabuto.catchcatch.view.HomeActivity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#99666666"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="30dp"
        android:translationZ="1dp"
        >

        <Button
            android:id="@+id/home_activity_open_settings"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:background="@android:drawable/ic_menu_preferences"
            android:onClick="showSettings"
            />

        <TextView
            android:id="@+id/home_activity_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/home_activity_open_settings"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="18sp"
            tools:text="Connected as: somebody"
            />
    </RelativeLayout>

    <org.osmdroid.views.MapView
        android:id="@+id/home_activity_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/home_map"
        />

    <io.perenecabuto.catchcatch.view.RadarView
        android:id="@+id/home_activity_radar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="40dp"
        android:background="@android:color/transparent"
        android:visibility="gone"
        tools:visibility="visible"
        />
</FrameLayout>
