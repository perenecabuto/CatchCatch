<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="io.perenecabuto.catchcatch.view.SettingsActivity"
    >
    <data>
        <variable
            name="address"
            type="java.lang.String"
            />
        <variable
            name="voice"
            type="java.lang.String"
            />
    </data>
    <ScrollView
        style="@android:style/Theme.Material"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="vertical"
            tools:ignore="HardcodedText"
            >
            <TextView
                style="@style/ScreenTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:includeFontPadding="true"
                android:text="Settings"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                />
            <!-- Addresses -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/listDivider"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="ServerAddress"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="server address"
                    android:text="@{address}"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/activity_settings_url_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:isScrollContainer="false"
                android:orientation="vertical"
                tools:layout_height="100dp"
                tools:listitem="@android:layout/simple_list_item_1"
                />
            <!-- Voices -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/listDivider"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Voices"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="voice"
                    android:text="@{voice}"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/activity_settings_voice_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:isScrollContainer="false"
                android:orientation="vertical"
                tools:layout_height="100dp"
                />
        </LinearLayout>
    </ScrollView>
</layout>